{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "verbatimModuleSyntax": false,
        "outDir": "./browser",
        "baseUrl": ".",
        "paths": {
            "@btc-vision/transaction": ["node_modules/@btc-vision/transaction"]
