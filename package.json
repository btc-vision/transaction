        "ecpair": "^2.1.0",
        "pako": "^2.1.0",
        "process": "^0.11.10",
        "sha.js": "^2.4.12",
        "ts-loader": "^9.5.4",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3"
    }
}
